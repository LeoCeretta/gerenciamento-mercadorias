@model List<MercadoriaModel>

@{
    ViewData["Title"] = "Página de entrada de mercadorias";
}

<div class="text-center">
    <h1 class="display-4">Entrada de mercadorias!</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Entrada" asp-action="RelatorioEntradas">Relatório de entradas</a>
    </div>
    <h2 class="display-4">Lista de mercadorias cadastradas</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Nº de Registro</th>
                <th scope="col">Fabricante</th>
                <th scope="col">Tipo</th>
                <th scope="col">Descrição</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data</th>
                <th scope="col">Local</th>
                <th scope="col">Entrada</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (MercadoriaModel mercadoria in Model)
                {
                    <tr>
                        <th scope="row">@mercadoria.Id</th>
                        <td>@mercadoria.Nome</td>
                        <td>@mercadoria.NmrRegistro</td>
                        <td>@mercadoria.Fornecedor</td>
                        <td>@mercadoria.Tipo</td>
                        <td>@mercadoria.Descricao</td>
                        <td>@mercadoria</td>
                        <td>@mercadoria</td>
                        <td>@mercadoria</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Exemplo básico">
                                <a role="button" class="btn btn-primary" asp-router-id="@mercadoria.Id" asp-controller="Entrada" asp-action="CadastrarEntrada">Cadastrar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
