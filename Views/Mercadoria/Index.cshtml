@model List<MercadoriaModel>

@{
    ViewData["Title"] = "Cadastro de mercadorias";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Mercadoria" asp-action="Adicionar">Adicionar mercadoria</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    
    @if (TempData["MensagemErro"] != null)
    { 
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
  
    <br/>
    <h1 class="display-4">Lista de mercadorias ativas</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Nº de Registro</th>
                <th scope="col">Fabricante</th>
                <th scope="col">Tipo</th>
                <th scope="col">Descrição</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (MercadoriaModel mercadoria in Model)
                {
                    <tr>
                        <th scope="row">@mercadoria.Id</th>
                        <td>@mercadoria.Nome</td>
                        <td>@mercadoria.NmrRegistro</td>
                        <td>@mercadoria.Fornecedor</td>
                        <td>@mercadoria.Tipo</td>
                        <td>@mercadoria.Descricao</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Exemplo básico">
                                <a role="button" class="btn btn-primary" asp-route-id="@mercadoria.Id" asp-controller="Mercadoria" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@mercadoria.Id" asp-controller="Mercadoria" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
